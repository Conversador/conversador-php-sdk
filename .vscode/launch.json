{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Tests Debug",
            "cwd": "${workspaceFolder}",
            "env": {
                "XDEBUG_CONFIG": "idekey=VSCODE remote_enable=1 profile_enable=1"
            },
            "port": 9000,
            "program": "${workspaceFolder}/vendor/bin/phpunit",
            "request": "launch",
            "type": "php"
        },
    ]
}